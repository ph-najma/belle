<h3>SALES REPORT</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">SL.NO</th>
      <th scope="col">USER</th>
      <th scope="col">PRODUCT</th>
      <th scope="col">QUANTITY</th>
      <th scope="col">TOTAL PRICE</th>
      <th scope="col">DISCOUNT</th>
      <th scope="col">COUPON DEDUCTION</th>
      <th scope="col">PAYMENT TYPE</th>
      <th scope="col">STATUS</th>
    </tr>
  </thead>
  <tbody>
    <% for (let i = 0; i < todaysOrders.length; i++) { %>
    <tr>
      <td style="width: 10px"><%= i + 1 %></td>
      <td><%= todaysOrders[i].user.name %></td>
      <td>
        <% todaysOrders[i].productDetails.forEach((product) => { %> <%=
        product.name %> <% }); %>
      </td>
      <td>
        <% todaysOrders[i].item.forEach((item) => { %> <%= item.quantity %> <%
        }); %>
      </td>
      <td>
        <% todaysOrders[i].item.forEach((item) => { %> <%= item.quantity *
        item.price %> <% }); %>
      </td>

      <td><%= todaysOrders[i].discount %></td>
      <td><%= todaysOrders[i].couponDeduction %></td>
      <td><%= todaysOrders[i].paymentType %></td>
      <td>
        <% todaysOrders[i].item.forEach((item) => { %> <%= item.status %> <% });
        %>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
